
<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="buttonColor">@color/orange</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="itemBackgroundColor">@color/white</item>
        <item name="iconColor">@color/black</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/orange</item>
        <item name="toolbarColor">@color/orange</item>
        <item name="textColor">@color/black</item>
        <item name="lineColor">@color/black_transparent</item>
        <item name="negativeColor">@color/red</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="buttonColor">@color/medium_grey</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="backgroundColor">@color/dark_grey</item>
        <item name="itemBackgroundColor">@color/medium_grey</item>
        <item name="iconColor">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="toolbarColor">@color/light_grey</item>
        <item name="textColor">@color/white</item>
        <item name="lineColor">@color/white_transparent</item>
        <item name="negativeColor">@color/red</item>
    </style>

    <style name="AppThemeLight.Splash">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button.Base" parent="Widget.AppCompat.Button" />

    <style name="Input.Base" parent="Widget.Design.TextInputLayout" />

    <style name="Text.Title" parent="TextAppearance.AppCompat.Title" />
</resources>
